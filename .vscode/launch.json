{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\main.js"
        },
         
        {
            "name": "Electron: Main Process",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",  // Electron executable
            "args": [
              "${workspaceFolder}/app.js"  // Path to your Electron main file
            ],
            "outputCapture": "std",
            "env": {
              "NODE_ENV": "development"
            },
            "skipFiles": ["<node_internals>/**"]
          },
    ]
}